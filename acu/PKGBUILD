# Maintainer: Samuel (kwankiu) <info@1us.ca>

pkgname=acu
pkgver=0.1.5
pkgrel=1
pkgdesc="A Configuration Utility for Arch Linux AArch64"
arch=('any')
url="https://github.com/kwankiu/acu"
license=('GPL')
source=("${pkgname}-${pkgver}.tar.gz::https://github.com/kwankiu/${pkgname}/archive/${pkgver}.tar.gz")
sha256sums=('SKIP')

package() {
  cd "$pkgname-$pkgver"

  install -Dm755 "acu" "$pkgdir/usr/bin/${pkgname}"
  install -Dm644 "LICENSE" "$pkgdir/usr/share/licenses/${pkgname}/LICENSE"
}