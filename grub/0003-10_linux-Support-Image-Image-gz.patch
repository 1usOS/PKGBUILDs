From: Samuel (kwankiu) <info@1us.ca>
Date: Mon, 26 Aug 2024 22:59:40 +0800
Subject: [PATCH] 10_linux: Support Image & Image.gz

---
 util/grub.d/10_linux.in | 11 ++++++++---
 1 file changed, 8 insertions(+), 3 deletions(-)

diff --git a/util/grub.d/10_linux.in b/util/grub.d/10_linux.in
index cc393be7e..7ce4e6e0c 100644
--- a/util/grub.d/10_linux.in
+++ b/util/grub.d/10_linux.in
@@ -171,7 +171,7 @@ case "x$machine" in
 	done ;;
     *) 
 	list=
-	for i in /boot/vmlinuz-* /boot/vmlinux-* /vmlinuz-* /vmlinux-* /boot/kernel-* ; do
+	for i in /boot/vmlinuz-* /boot/vmlinux-* /vmlinuz-* /vmlinux-* /boot/kernel-*  /boot/Image /boot/Image.gz ; do
                   if grub_file_is_not_garbage "$i" ; then list="$list $i" ; fi
 	done ;;
 esac
@@ -210,8 +210,13 @@ for linux in ${reverse_sorted_list}; do
   basename=`basename $linux`
   dirname=`dirname $linux`
   rel_dirname=`make_system_path_relative_to_its_root $dirname`
-  version=`echo $basename | sed -e "s,^[^0-9]*-,,g"`
-  alt_version=`echo $version | sed -e "s,\.old$,,g"`
+  if [[ "$basename" = "Image"* ]]; then
+    version="linux"
+    alt_version=`ls -t /boot | grep -o 'initramfs-\(.*\).img' | grep -v 'fallback' | sed 's/initramfs-\(.*\).img/\1/' | head -n 1`
+  else
+    version=`echo $basename | sed -e "s,^[^0-9]*-,,g"`
+    alt_version=`echo $version | sed -e "s,\.old$,,g"`
+  fi
   linux_root_device_thisversion="${LINUX_ROOT_DEVICE}"
 
   initrd_early=
